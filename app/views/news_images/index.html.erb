<p id="notice"><%= notice %></p>

<h1>Listing News Images</h1>

<table>
  <thead>
    <tr>
      <th>News</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_images.each do |news_image| %>
      <tr>
        <td><%= news_image.news %></td>
        <td><%= link_to 'Show', news_image %></td>
        <td><%= link_to 'Edit', edit_news_image_path(news_image) %></td>
        <td><%= link_to 'Destroy', news_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News image', new_news_image_path %>
