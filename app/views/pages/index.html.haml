%section#cta.wrapper.style4 
	.inner    
		%header
			%p
				- if $lang == 'pl'
					=raw @static.contactText_pl
				- elsif $lang == 'en'
					=raw @static.contactText_en
				- else
					=raw @static.contactText_it
		%ul.actions.vertical
			%li
				%form
					%label{for: "name"}
						- if $lang == 'pl'
							= translation.formName_pl
						- elsif $lang == 'en'
							= translation.formName_en
						- else
							= translation.formName_it
					%input{type: "text", name: "name"}/
					%label{for: "email"}
						- if $lang == 'pl'
							= translation.formEmail_pl
						- elsif $lang == 'en'
							= translation.formEmail_en
						- else
							= translation.formEmail_it
					%input{type: "email", name: "email"}/
					%label{for: "tel"}
						- if $lang == 'pl'
							= translation.formTel_pl
						- elsif $lang == 'en'
							= translation.formTel_en
						- else
							= translation.formTel_it
					%input{type: "text", name: "tel"}/
					%label{for: "content"}
						- if $lang == 'pl'
							= translation.formContent_pl
						- elsif $lang == 'en'
							= translation.formContent_en
						- else
							= translation.formContent_it
					%textarea{name: "content", :cols => "30", :rows => "5"}
					%br/
					- if $lang == 'pl'
						%input{:type => "submit", :value => translation.formSend_pl}/
					- elsif $lang == 'en'
						%input{:type => "submit", :value => translation.formSend_en}/
					- else
						%input{:type => "submit", :value => translation.formSend_it}/
				%br/
				%button#googleMapHrefButton
					%a{href: "https://www.google.pl/maps/place/52%C2%B012'46.7%22N+20%C2%B057'19.5%22E/@52.21297,20.955412,17z/data=!3m1!4b1!4m2!3m1!1s0x0:0x0"}
