%section#pf.wrapper.portfolio.special
	.inner
		%header.major
			%h2
				- if $lang == 'pl'
					= translation.portfolioHeader_pl
				- elsif $lang == 'en'
					= translation.portfolioHeader_en
				- else
					= translation.portfolioHeader_it
			- @portfolio.each do |p|
				.item{id: "portfolio-item-#{p.id}", "data-for" => "#portfolio-modal-#{p.id}"}
					.logotype
						= image_tag p.brand.url
	- @portfolio.each do |p|
		%div.portfolio-modal{id: "portfolio-modal-#{p.id}"}
			%h3
				- if $lang == 'pl'
					= p.title_pl
				- elsif $lang == 'en'
					= p.title_en
				- else
					= p.title_it
			%p
				- if $lang == 'pl'
					=raw p.content_pl
				- elsif $lang == 'en'
					=raw p.content_en
				- else
					=raw p.content_it
			- if p.url
				%a{href: p.url} 
					- if $lang == 'pl'
						= translation.portfolioMore_pl
					- elsif $lang == 'en'
						= translation.portfolioMore_en
					- else
						= translation.portfolioMore_it

%section#madeing.wrapper.alt.style2.special.gridalicious
	.inner
		%header.major
			%h2 Made in G
	- @madeing.each do |s|
		%section.spotlight
			.image
				= image_tag s.img.url
			.content
				%p
					- if $lang == 'pl'
						=raw s.content_pl
					- elsif $lang == 'en'
						=raw s.content_en
					- else
						=raw s.content_it
	.container.owl-carousel-container
		.owl-carousel{class: (@madeing_gallery.rotator)? "rotator":  "gallery"}
			- @madeing_gallery.gallery_images.each do |i|
				%a{href: i.img.url, "data-lightbox"=>"madeingShowroom"}
					= image_tag i.img.url(:thumb)

