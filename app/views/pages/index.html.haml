%section#banner
	.inner
		.svg-container
			%h2
				= image_tag "newLogo.png"
		%p
			- if $lang == 'pl'
				=raw @static.startText_pl
			- elsif $lang == 'en'
				=raw @static.startText_en
			- else
				=raw @static.startText_it
	%a{href: "#one" , class: 'more scrolly'}
		- if $lang == 'pl'
			= translation.startMore_pl
		- elsif $lang == 'en'
			= translation.startMore_en
		- else
			= translation.startMore_it

%section#one.wrapper.style1.style1-bg.special
	.inner
		%header.major
			%h2
				- if $lang == 'pl'
					= translation.aboutHeader_pl
				- elsif $lang == 'en'
					= translation.aboutHeader_en
				- else
					= translation.aboutHeader_it
