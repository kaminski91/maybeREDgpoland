%section#three.wrapper.style3.special
	.inner
		%header.major
			%h2
				- if $lang == 'pl'
					= translation.newsHeader_pl
				- elsif $lang == 'en'
					= translation.newsHeader_en
				- else
					= translation.newsHeader_it
