<%= form_for(@download) do |f| %>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= collection_select(:download, :user_id, User.where(admin: false).order(:id), :id, :email, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :file %><br>
    <%= f.file_field :file %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
