%h1 Made In G

%table.responsive-table
  %thead
    %tr
      %th Tytuł
      %th{colspan: "3"}/
  %tbody
    - @made_in_gs.order(:id).each do |made_in_g|
      %tr
        %td
          = truncate made_in_g.content_pl
        %td
          = link_to 'Wyświetl', made_in_g
        %td
          = link_to 'Edytuj', edit_made_in_g_path(made_in_g)
        %td
          = link_to 'Usuń', made_in_g, method: :delete, data: { confirm: 'Na pewno?' }

.fixed-action-btn
  %a.btn-floating.btn-large{href: new_made_in_g_path}
    %i.fa.fa-plus