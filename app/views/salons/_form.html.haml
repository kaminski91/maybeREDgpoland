= form_for(@salon) do |f|
  .field
    = f.label :brand, "Marka"
    = f.text_field :brand
  .field
    = f.label :posX, "Współrzędne X punktu na mapie"
    = f.text_field :posX
  .field
    = f.label :posY, "Współrzędne Y punktu na mapie"
    = f.text_field :posY
  .field
    = f.label :country, "Kraj"
    = f.text_field :country
  .field
    = f.label :city, "Miasto"
    = f.text_field :city
  -# .field
  -#   = f.label :address
  -#   = f.text_field :address
  .field
    = f.label :description, "Lokalizacja"
    = f.text_area :description, class: "materialize-textarea"

  .actions
    %button.btn.waves-effect.waves-light{type: "submit", name: "action"} Zapisz