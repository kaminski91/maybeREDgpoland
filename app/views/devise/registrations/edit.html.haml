%h2 Zmiana hasła
%h5 Konto: #{current_user.email}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!

  .field
    = f.label :password, "Nowe hasło"
    = f.password_field :password, autocomplete: "off"

  .field
    = f.label :password_confirmation, "Potwierdź nowe hasło"
    = f.password_field :password_confirmation, autocomplete: "off"

  .field
    = f.label :current_password, "Stare hasło"
    = f.password_field :current_password, autocomplete: "off"

  .actions
    %button.btn.waves-effect.waves-light{type: "submit", name: "action"} Zapisz